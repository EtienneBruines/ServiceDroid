<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
  	<LinearLayout android:orientation="horizontal" 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
		android:background="@drawable/action_bar">
  		
		<TextView android:id="@+id/stats_timeperiod"
			android:layout_width="1dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingTop="7dip"
			android:paddingBottom="7dip"
			android:paddingLeft="14dip"
			android:paddingRight="14dip"
			android:textAppearance="?android:attr/textAppearanceLarge" />
		
		<ImageView android:src="@drawable/action_bar_btn_border"
			android:layout_width="1dip"
			android:layout_height="fill_parent" />
		
		<ImageView android:src="@drawable/action_bar_btn_hightlight"
			android:layout_width="1dip"
			android:layout_height="fill_parent" />
		
		<ImageButton android:id="@+id/btn_send"
			android:src="@android:drawable/sym_action_email"
			android:background="@drawable/action_bar_button"
			android:scaleType="center"
			android:layout_width="42dip"
			android:layout_height="fill_parent"
			android:layout_centerVertical="true" />
	
	</LinearLayout>
	<ScrollView android:id="@+id/statsscrollview"  
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:layout_weight="1"
		android:fillViewport="true"> 
	<TableLayout 
		android:id="@+id/statstable" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:padding="14dip"
		android:stretchColumns="0,1"
		android:gravity="center_vertical|center_horizontal">
		
		<TableRow>
			<TextView android:text="@string/hours" 
				android:paddingTop="5dip"
				android:paddingBottom="5dip" 
				android:textAppearance="?android:attr/textAppearanceLarge" 
				android:gravity="center_vertical|left" />
			<TextView android:id="@+id/hours"  
				android:padding="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|right" />
		</TableRow>
		
		<TableRow>
			<TextView android:text="@string/magazines" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|left" />
			<TextView android:id="@+id/magazines" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|right" />
		</TableRow>
		<TableRow>
			<TextView android:text="@string/brochures" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|left" />
			<TextView android:id="@+id/brochures" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|right" />
		</TableRow>
		
		<TableRow>
			<TextView android:text="@string/books" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|left" />
			<TextView android:id="@+id/books" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|right" />
		</TableRow>
		
		<TableRow>
			<TextView android:text="@string/rvs" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|left" />
			<TextView android:id="@+id/rvs" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|right" />
		</TableRow>
		
		<TableRow>
			<TextView android:text="@string/bible_studies" 
				android:paddingTop="5dip"
				android:paddingBottom="5dip" 
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|left" />
			<TextView android:id="@+id/bible_studies" 
				android:paddingTop="5dip" 
				android:paddingBottom="5dip" 
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:gravity="center_vertical|right" />
		</TableRow>
		
	</TableLayout>
	</ScrollView>
	
	
</LinearLayout>
